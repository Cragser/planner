---
// TaskForm â€” modal form for creating/editing tasks
// Fields: title, description, status, priority, start date, end date, tags
---
<div id="task-form-content">
  <h2 id="task-form-heading">New Task</h2>
  <form id="task-form" class="task-form">
    <input type="hidden" id="task-form-id" value="" />
    <div class="form-group">
      <label for="task-form-title">Title *</label>
      <input type="text" class="input" id="task-form-title" required maxlength="200" placeholder="Task title" />
    </div>
    <div class="form-group">
      <label for="task-form-description">Description</label>
      <textarea class="input task-form-textarea" id="task-form-description" rows="4" placeholder="Task description (markdown)"></textarea>
    </div>
    <div class="form-row">
      <div class="form-group">
        <label for="task-form-status">Status</label>
        <select class="select" id="task-form-status">
          <option value="backlog">Backlog</option>
          <option value="in-progress">In Progress</option>
          <option value="review">Review</option>
          <option value="done">Done</option>
          <option value="archived">Archived</option>
        </select>
      </div>
      <div class="form-group">
        <label for="task-form-priority">Priority</label>
        <select class="select" id="task-form-priority">
          <option value="p3">P3 Low</option>
          <option value="p2">P2 Medium</option>
          <option value="p1">P1 High</option>
          <option value="p0">P0 Critical</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group">
        <label for="task-form-start">Start Date *</label>
        <input type="date" class="input" id="task-form-start" required />
      </div>
      <div class="form-group">
        <label for="task-form-end">End Date</label>
        <input type="date" class="input" id="task-form-end" />
      </div>
    </div>
    <div class="form-group">
      <label for="task-form-tags">Tags (comma-separated)</label>
      <input type="text" class="input" id="task-form-tags" placeholder="frontend, urgent, bug" />
    </div>
    <div class="form-actions">
      <button type="button" class="btn" id="task-form-cancel">Cancel</button>
      <button type="submit" class="btn btn--primary" id="task-form-submit">Create Task</button>
    </div>
  </form>
</div>

<style>
  .task-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  .form-group label {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text-muted);
  }
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-md);
  }
  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }
  .task-form-textarea {
    resize: vertical;
    font-family: var(--font-mono);
    font-size: var(--font-size-sm);
  }
  #task-form-heading {
    margin-bottom: var(--spacing-sm);
  }
</style>
